<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editVirtualStandInMenu"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2b2b2b"
    app:layout_constraintTop_toBottomOf="@id/horizontal_guideline_bottom"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:visibility="gone"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >

        <ImageButton
            android:id="@+id/standInColorButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/people_stand_in"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="15dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >

        <ImageButton
            android:id="@+id/acceptStandIn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/baseline_check_circle_white_48"
            android:backgroundTint="#FF570B"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageButton
            android:id="@+id/addStandInButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/baseline_add_circle_outline_white_48"
            android:backgroundTint="@color/gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/acceptStandIn"
            android:layout_marginEnd="15dp"
            />

        <ImageButton
            android:id="@+id/deleteStandInButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/trash"
            android:backgroundTint="@color/gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/addStandInButton"
            android:layout_marginEnd="15dp"
            />

        <ImageButton
            android:id="@+id/refreshStandInPosicionAndScaleButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/baseline_refresh_white_48"
            android:backgroundTint="@color/gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/deleteStandInButton"
            android:layout_marginEnd="15dp"
            />

        <ImageButton
            android:id="@+id/helpStandInButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/baseline_help_outline_24"
            android:backgroundTint="@color/gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/refreshStandInPosicionAndScaleButton"
            android:layout_marginEnd="15dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>