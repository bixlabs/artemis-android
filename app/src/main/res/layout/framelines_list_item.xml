<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="50dip"
    android:layout_width="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/custom_ripple"
    >

    <TextView
        android:id="@+id/framelineText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:textColor="@color/orangeArtemisText"
        android:textAllCaps="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_toLeftOf="@id/deleteFramelineButton"
        android:id="@+id/editFramelineButton"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAllCaps="true"
        android:textColor="@color/orangeArtemisText"
        android:background="@drawable/button_primary"
        android:padding="8dp"
        android:text="@string/edit"
        android:layout_centerVertical="true"
        android:layout_marginRight="24dp"
        />

    <ImageView
        android:id="@+id/deleteFramelineButton"
        android:layout_width="25dp"
        android:layout_height="44dp"
        android:layout_toLeftOf="@id/applyFramelineCheckbox"
        android:layout_centerVertical="true"
        android:layout_marginRight="24dp"
        android:src="@drawable/trash"
        ></ImageView>

    <CheckBox
        android:id="@+id/applyFramelineCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:buttonTint="@color/orangeArtemisText"
        />

</RelativeLayout>
