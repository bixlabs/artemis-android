<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2B2B2B">

    <ImageButton
        android:id="@+id/peopleButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/people_stand_in"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageButton
        android:id="@+id/vehicleButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/vehicle_stand_in"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/peopleButton"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/buttonClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/cross"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.veinhorn.scrollgalleryview.ScrollGalleryView
        android:id="@+id/scrollGalleryView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#2B2B2B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonClose"
        />

</androidx.constraintlayout.widget.ConstraintLayout>