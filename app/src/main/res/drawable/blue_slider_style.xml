<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:height="5dp" android:top="5dp">
        <shape>
            <corners android:radius="5dip" />
            <solid android:color="@android:color/darker_gray" />
        </shape>
    </item>
    <item android:id="@android:id/progress" android:height="5dp" android:top="5dp">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <solid android:color="@android:color/holo_blue_dark" />
            </shape>
        </clip>
    </item>
</layer-list>