<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/LinearLayout_lens_setting_horrizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/lens_settings_back"
            android:layout_width="50dip"
            android:layout_height="40dp"
            android:src="@drawable/backicon" >
        </ImageView>

        <TextView
            android:id="@+id/lens_settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dip"
            android:text="@string/gallery_title"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:clickable="true"
            android:gravity="right" >

            <ImageView
                android:id="@+id/gallerySequence"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/galleryGridButton"
                android:clickable="true"
                android:src="@drawable/sequenceiconbutton" />

            <ImageView
                android:id="@+id/exportMedia"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/gallerySequence"
                android:clickable="true"
                android:src="@drawable/exportmedia" />

            <ImageView
                android:id="@+id/galleryGridButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:clickable="true"
                android:src="@drawable/galleygrid" />

        </RelativeLayout>

    </LinearLayout>
<Gallery
        android:id="@+id/gallery1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />
</LinearLayout><!-- From: file:/C:/Users/jon/git/artemis-android/artemis-android/res/layout-sw360dp/gallery.xml -->