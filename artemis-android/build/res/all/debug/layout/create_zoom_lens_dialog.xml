<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/zoomLensName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/zoom_lens_name"
        android:inputType="textCapWords"
        android:nextFocusDown="@+id/zoomLensMinFL"
        android:selectAllOnFocus="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/zoomLensMinFL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.47"
            android:hint="@string/min_focal_length"
            android:inputType="numberDecimal"
            android:nextFocusDown="@+id/zoomLensMaxFL"
            android:selectAllOnFocus="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />

        <EditText
            android:id="@+id/zoomLensMaxFL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.47"
            android:hint="@string/max_focal_length"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true" />
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/jon/git/artemis-android/artemis-android/res/layout/create_zoom_lens_dialog.xml -->