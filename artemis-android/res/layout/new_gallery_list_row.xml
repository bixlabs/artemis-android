<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/photo_row_imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/empty_placeholder" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/photo_row_movie_icon_container"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/photo_row_movie_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/movie_icon"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout >

    <CheckBox
        android:id="@+id/photo_row_radioCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#ffd500"
        android:checked="false"
        app:layout_constraintEnd_toEndOf="@+id/photo_row_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/photo_row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/photo_row_imageView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Title" />

</androidx.constraintlayout.widget.ConstraintLayout>