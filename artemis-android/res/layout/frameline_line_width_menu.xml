<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/framelineLineWidthMenu"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="bottom|center"
    android:background="@drawable/cameraoverlay_bottom"
    android:gravity="center_horizontal"
    app:layout_constraintTop_toBottomOf="@id/horizontal_guideline_bottom"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:orientation="horizontal"
    android:visibility="gone"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        >

        <LinearLayout
            android:id="@+id/lineWidth1"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginRight="16dp"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/orangeArtemisText"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineWidth2"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginRight="16dp"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/orangeArtemisText"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineWidth3"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginRight="16dp"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/orangeArtemisText"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineWidth4"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginRight="16dp"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/orangeArtemisText"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineWidth5"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginRight="16dp"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/orangeArtemisText"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
