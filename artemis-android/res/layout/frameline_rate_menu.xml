<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/framelineRateMenu"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="bottom|center"
    android:background="@drawable/cameraoverlay_bottom"
    android:gravity="center_horizontal"
    app:layout_constraintTop_toBottomOf="@id/horizontal_guideline_bottom"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:orientation="horizontal"
    android:visibility="gone"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/framelineRatesRecyclerView"
        android:scrollbars="horizontal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginTop="3dp"
        ></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        >
        <TextView
            android:id="@+id/addCustomFramelineRateButton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/custom"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:background="@drawable/button_accent"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="12dp"
            />
    </LinearLayout>

</LinearLayout>
