<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="vertical" android:layout_gravity="center"
	android:gravity="center">
	<TextView android:id="@+id/add_custom_camera_title"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="left" android:text="@string/add_custom_camera_title" />

	<LinearLayout android:layout_width="wrap_content"
		android:gravity="center" android:layout_height="wrap_content"
		android:orientation="horizontal">
		<EditText android:id="@+id/custom_camera_name"
			android:layout_height="wrap_content" android:hint="@string/custom_camera_name"
			android:textSize="6pt" android:maxLines="2" android:inputType="textPersonName"
			android:nextFocusDown="@+id/custom_camera_distance"
			android:layout_width="315dip"/>
		<EditText android:id="@+id/custom_camera_distance"
			android:layout_height="wrap_content" android:hint="@string/custom_camera_distance"
			android:gravity="center" android:textSize="6pt" android:layout_width="150dip"
			android:maxLines="1" android:inputType="numberDecimal"
			android:nextFocusDown="@+id/custom_camera_width"
			android:layout_marginLeft="15dip"/>
	</LinearLayout>

	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:orientation="horizontal">
		<EditText android:id="@+id/custom_camera_width"
			android:layout_height="wrap_content" android:completionHint="@string/custom_camera_width"
			android:width="100dip" android:hint="@string/custom_camera_width"
			android:gravity="center" android:textSize="6pt" android:layout_width="150dip"
			android:nextFocusDown="@+id/custom_camera_height"
			android:maxLines="1" android:inputType="numberDecimal"/>
		<EditText android:id="@+id/custom_camera_height"
			android:layout_height="wrap_content" android:hint="@string/custom_camera_height"
			android:gravity="center" android:width="100dip" android:textSize="6pt"
			android:layout_width="150dip" android:maxLines="1" android:inputType="numberDecimal"
			android:nextFocusDown="@+id/custom_camera_focallength"
			android:layout_marginLeft="15dip"/>
		<EditText android:id="@+id/custom_camera_focallength"
			android:layout_height="wrap_content" android:hint="@string/custom_camera_focallength"
			android:gravity="center" android:textSize="6pt" android:layout_width="150dip"
			android:maxLines="1" android:inputType="number"
			android:nextFocusDown="@+id/save_custom_camera"
			android:layout_marginLeft="15dip"/>
	</LinearLayout>

	<ScrollView android:layout_marginBottom="50dip" android:id="@+id/ScrollView02"
		android:layout_height="wrap_content" android:layout_width="wrap_content">
		<TableLayout android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:gravity="center_horizontal"
			android:layout_gravity="center">
			<ImageView android:src="@drawable/add_custom_camera"
				android:id="@+id/add_custom_camera_image_diagram"
				android:layout_width="fill_parent" android:scaleType="centerInside"
				android:layout_height="wrap_content" />
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/add_custom_camera_directions"
				android:text="@string/add_custom_camera_directions" android:width="510dip"></TextView>
		</TableLayout>
	</ScrollView>

	<RelativeLayout android:layout_marginTop="-50dip"
		android:gravity="center" android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:paddingTop="5dip">
		<Button android:id="@+id/save_custom_camera"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/save_custom_camera" />
	</RelativeLayout>

</LinearLayout>