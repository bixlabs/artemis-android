<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:fadeScrollbars="true"
	android:focusable="true" android:focusableInTouchMode="true"
	android:layout_width="fill_parent" android:layout_height="match_parent">
	<TextView android:text="@string/artemis_settings_title"
		android:id="@+id/artemis_settings_title" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:lines="1"
		android:gravity="center" android:layout_gravity="left"
		android:maxLines="1" android:textSize="20dip"  android:textColor="@color/artemisSettingsText" />
	<ScrollView android:layout_marginBottom="60dip" android:id="@+id/ScrollView01"
		android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
		android:layout_width="match_parent">
		<TableLayout android:id="@+id/tableLayout1"
			android:stretchColumns="0" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:background="#808080">
			<TableRow android:id="@+id/tableRow16"
				android:layout_height="wrap_content" android:padding="5dip" 
				android:layout_width="fill_parent" android:background="#000000"
				android:layout_margin="1dp">
					<TextView android:enabled="false" android:id="@+id/textView16"
						android:layout_width="100dip" android:layout_gravity="center_vertical"
						android:text="@string/choose_folder_for_image_saving"
						android:layout_height="wrap_content" android:layout_weight="2" android:textSize="@dimen/artemisSettingsFontSize_sw600dp"  android:textColor="@color/artemisSettingsText" />
					<EditText android:layout_width="wrap_content" android:id="@+id/choose_path"
						android:layout_gravity="right" android:layout_marginLeft="20dip"
						android:layout_height="40dip"/>
			</TableRow>
			<TableRow android:padding="5dip"
				android:id="@+id/tableRow1" android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:background="#000000"
				android:layout_margin="1dp">
					<TextView android:enabled="false" android:id="@+id/textView1"
						android:layout_width="100dip" android:layout_gravity="center_vertical"
						android:text="@string/set_preview_size_text"
						android:layout_height="wrap_content" android:layout_weight="2" android:textSize="@dimen/artemisSettingsFontSize_sw600dp"  android:textColor="@color/artemisSettingsText" />
					<Spinner android:layout_marginLeft="45dip"
						android:layout_width="wrap_content" android:layout_height="45dip"
						android:id="@+id/set_preview_size_spinner" android:layout_gravity="right"
						android:paddingTop="10dip" android:prompt="@string/select_preview_size_text"></Spinner>
				
			</TableRow>
			<TableRow android:padding="5dip" android:id="@+id/tableRow2"
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent" android:background="#000000"
				android:layout_margin="1dp">
					<TextView android:enabled="false" android:id="@+id/textView2"
						android:layout_width="100dip" android:layout_gravity="center_vertical"
						android:text="@string/auto_device_h_and_v_angles"
						android:layout_height="wrap_content" android:layout_weight="2" android:textSize="@dimen/artemisSettingsFontSize_sw600dp"  android:textColor="@color/artemisSettingsText" />
					<Button android:enabled="false" android:layout_width="wrap_content"
						android:id="@+id/reset_device_angles" android:layout_gravity="right"
						android:layout_marginLeft="10dip" android:text="@string/reset_device_h_and_v_angles"
						android:layout_height="40dip"></Button>
					<ToggleButton android:layout_width="wrap_content"
						android:text="ToggleButton" android:layout_gravity="right"
						android:layout_marginLeft="20dip" android:enabled="true"
						android:paddingBottom="10dip" android:checked="true"
						android:layout_height="40dip" android:id="@+id/auto_device_h_and_v_angles_toggle"></ToggleButton>
			</TableRow>
			<TableRow android:id="@+id/tableRow3"
				android:layout_height="wrap_content" android:padding="5dip"
				android:layout_width="fill_parent" android:background="#000000"
				android:layout_margin="1dp">
					<TextView android:enabled="false" android:id="@+id/textView3"
						android:layout_width="wrap_content" android:layout_gravity="center_vertical"
						android:text="@string/manually_set_h_angle_text"
						android:layout_height="wrap_content" android:layout_weight="2" android:textSize="@dimen/artemisSettingsFontSize_sw600dp"  android:textColor="@color/artemisSettingsText" />
					<EditText android:layout_width="wrap_content"
						android:text="EditText" android:layout_gravity="right"
						android:inputType="numberDecimal" android:layout_height="wrap_content"
						android:enabled="false" android:id="@+id/edit_h_angle_textedit"></EditText>
			</TableRow>
			<TableRow android:id="@+id/tableRow4"
				android:layout_height="wrap_content" android:padding="5dip"
				android:layout_width="fill_parent" android:background="#000000"
				android:layout_margin="1dp">
					<TextView android:enabled="false" android:id="@+id/textView4"
						android:layout_width="wrap_content" android:layout_gravity="center_vertical"
						android:text="@string/manually_set_v_angle_text"
						android:layout_height="wrap_content" android:layout_weight="2" android:textSize="@dimen/artemisSettingsFontSize_sw600dp"  android:textColor="@color/artemisSettingsText" />
					<EditText android:layout_width="wrap_content"
						android:text="EditText" android:layout_gravity="right"
						android:inputType="numberDecimal" android:layout_height="wrap_content"
						android:enabled="false" android:id="@+id/edit_v_angle_textedit"></EditText>
			</TableRow>
			<TableRow android:id="@+id/tableRow5"
				android:layout_height="wrap_content" android:padding="5dip"
				android:layout_width="fill_parent" android:background="#000000"
				android:layout_margin="1dp">
					<TextView android:enabled="false" android:id="@+id/textView5"
						android:layout_width="100dip" android:layout_gravity="center_vertical"
						android:text="@string/set_white_balance_text"
						android:layout_height="wrap_content" android:layout_weight="2" android:textSize="@dimen/artemisSettingsFontSize_sw600dp"  android:textColor="@color/artemisSettingsText" />
					<Spinner android:layout_marginLeft="20dip"
						android:layout_width="wrap_content" android:layout_height="45dip"
						android:id="@+id/settings_white_balance_spinner"
						android:layout_gravity="right" android:paddingTop="10dip"
						android:prompt="@string/set_white_balance"></Spinner>
			</TableRow>
			<TableRow android:id="@+id/tableRow6"
				android:layout_height="wrap_content" android:padding="5dip"
				android:layout_width="fill_parent" android:background="#000000"
				android:layout_margin="1dp">
					<TextView android:enabled="false" android:id="@+id/textView6"
						android:layout_width="100dip" android:layout_gravity="center_vertical"
						android:text="@string/set_exposure_text" android:layout_height="wrap_content"
						android:layout_weight="2" android:textSize="@dimen/artemisSettingsFontSize_sw600dp" android:textColor="@color/artemisSettingsText" />
					<Spinner android:layout_marginLeft="20dip"
						android:layout_width="wrap_content" android:layout_height="45dip"
						android:id="@+id/settings_exposure_spinner"
						android:layout_gravity="right" android:paddingTop="10dip"
						android:prompt="@string/set_exposure"></Spinner>
			</TableRow>
			<TableRow android:id="@+id/tableRow7"
				android:layout_height="match_parent" android:padding="5dip"
				android:layout_width="wrap_content" android:background="#000000"
				android:layout_margin="1dp">
					<TextView android:enabled="false" android:id="@+id/textView7"
						android:layout_width="100dip" android:layout_gravity="center_vertical"
						android:text="@string/heading_tilt_roll_text"
						android:layout_height="wrap_content" android:layout_weight="2" android:textSize="@dimen/artemisSettingsFontSize_sw600dp"  android:textColor="@color/artemisSettingsText" />
					<Spinner android:layout_marginLeft="20dip"
						android:entries="@array/heading_tilt_roll_array"
						android:layout_width="wrap_content" android:layout_height="45dip"
						android:id="@+id/heading_tilt_roll_spinner"
						android:layout_gravity="right" android:paddingTop="10dip"
						android:prompt="@string/heading_tilt_roll_text"></Spinner>
			</TableRow>
			<TableRow android:id="@+id/tableRow17"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:padding="5dip" android:background="#000000"
				android:layout_margin="1dp">
					<TextView android:layout_height="wrap_content" android:id="@+id/textView17"
						android:layout_width="100dip" android:enabled="false"
						android:text="@string/auto_focus_text" android:layout_weight="2"
						android:layout_gravity="center_vertical" android:textSize="@dimen/artemisSettingsFontSize_sw600dp"  android:textColor="@color/artemisSettingsText" />
					<ToggleButton android:layout_height="40dip"
						android:text="ToggleButton" android:layout_marginLeft="20dip"
						android:id="@+id/auto_focus_toggle" android:layout_width="wrap_content"
						android:paddingBottom="10dip" android:layout_gravity="right"></ToggleButton>
			</TableRow>
			<TableRow android:id="@+id/tableRow11"
				android:layout_height="wrap_content" android:padding="5dip"
				android:layout_width="fill_parent" android:background="#000000"
				android:layout_margin="1dp">
					<TextView android:enabled="false" android:id="@+id/textView11"
						android:layout_width="100dip" android:layout_gravity="center_vertical"
						android:text="@string/smooth_filter_text" android:layout_height="wrap_content"
						android:layout_weight="2" android:textSize="@dimen/artemisSettingsFontSize_sw600dp"  android:textColor="@color/artemisSettingsText" />
					<ToggleButton android:layout_width="wrap_content"
						android:text="ToggleButton" android:layout_gravity="right"
						android:layout_marginLeft="20dip" android:paddingBottom="10dip"
						android:layout_height="40dip" android:id="@+id/smooth_filter_toggle"></ToggleButton>
			</TableRow>
			<TableRow android:id="@+id/tableRow8"
				android:layout_height="wrap_content" android:padding="5dip"
				android:layout_width="fill_parent" android:background="#000000"
				android:layout_margin="1dp">
					<TextView android:enabled="false" android:id="@+id/textView8"
						android:layout_width="100dip" android:layout_gravity="center_vertical"
						android:text="@string/set_flash_mode_text" android:layout_height="wrap_content"
						android:layout_weight="2" android:textSize="@dimen/artemisSettingsFontSize_sw600dp"  android:textColor="@color/artemisSettingsText" />
					<ToggleButton android:layout_width="wrap_content"
						android:text="ToggleButton" android:layout_gravity="right"
						android:layout_marginLeft="20dip" android:enabled="false"
						android:paddingBottom="10dip" android:layout_height="40dip"
						android:id="@+id/set_flash_mode_spinner"></ToggleButton>
			</TableRow>
			<TableRow android:id="@+id/tableRow9"
				android:layout_height="wrap_content" android:padding="5dip"
				android:layout_width="match_parent" android:background="#000000"
				android:layout_margin="1dp">
					<TextView android:enabled="false" android:id="@+id/textView9"
						android:layout_width="100dip" android:layout_gravity="center_vertical"
						android:text="@string/quickshot_text" android:layout_height="wrap_content"
						android:layout_weight="2" android:textSize="@dimen/artemisSettingsFontSize_sw600dp"  android:textColor="@color/artemisSettingsText" />
					<ToggleButton android:layout_width="wrap_content"
						android:text="ToggleButton" android:layout_gravity="right"
						android:layout_marginLeft="20dip" android:paddingBottom="10dip"
						android:layout_height="40dip" android:id="@+id/quickshot_toggle"></ToggleButton>
			</TableRow>
			<TableRow android:id="@+id/tableRow10"
				android:layout_height="wrap_content" android:padding="5dip"
				android:layout_width="fill_parent" android:background="#000000"
				android:layout_margin="1dp">
					<TextView android:enabled="false" android:id="@+id/textView10"
						android:layout_width="100dip" android:layout_gravity="center_vertical"
						android:text="@string/lock_boxes_text" android:layout_height="wrap_content"
						android:layout_weight="2" android:textSize="@dimen/artemisSettingsFontSize_sw600dp"  android:textColor="@color/artemisSettingsText" />
					<ToggleButton android:layout_width="wrap_content"
						android:layout_gravity="right" android:layout_marginLeft="20dip"
						android:paddingBottom="10dip" android:layout_height="40dip"
						android:text="ToggleButton" android:id="@+id/lock_boxes_toggle"></ToggleButton>
			</TableRow>
			<TableRow android:id="@+id/tableRow12"
				android:layout_height="wrap_content" android:padding="5dip"
				android:layout_width="fill_parent" android:background="#000000"
				android:layout_margin="1dp">
					<TextView android:enabled="false" android:id="@+id/textView12"
						android:layout_width="100dip" android:layout_gravity="center_vertical"
						android:text="@string/gps_on_off" android:layout_height="wrap_content"
						android:layout_weight="2" android:textSize="@dimen/artemisSettingsFontSize_sw600dp"  android:textColor="@color/artemisSettingsText" />
					<ToggleButton android:layout_width="wrap_content"
						android:text="ToggleButton" android:layout_gravity="right"
						android:layout_marginLeft="20dip" android:paddingBottom="10dip"
						android:layout_height="40dip" android:id="@+id/settings_gps_enabled"></ToggleButton>
			</TableRow>
			<TableRow android:id="@+id/tableRow13"
				android:layout_height="wrap_content" android:padding="5dip"
				android:layout_width="fill_parent" android:background="#000000"
				android:layout_margin="1dp">
					<TextView android:enabled="false" android:id="@+id/textView13"
						android:layout_width="100dip" android:layout_gravity="center_vertical"
						android:text="@string/select_language_text" android:layout_height="wrap_content"
						android:layout_weight="2" android:textSize="@dimen/artemisSettingsFontSize_sw600dp"  android:textColor="@color/artemisSettingsText" />
					<Spinner android:layout_marginLeft="20dip"
						android:entries="@array/select_language_array"
						android:layout_width="wrap_content" android:layout_height="45dip"
						android:id="@+id/select_language_spinner" android:layout_gravity="right"
						android:paddingTop="10dip" android:prompt="@string/select_language_text"></Spinner>
			</TableRow>
			<TableRow android:id="@+id/tableRow15"
				android:layout_height="wrap_content" android:padding="5dip"
				android:layout_width="fill_parent" android:background="#000000"
				android:layout_margin="1dp">
					<TextView android:enabled="false" android:id="@+id/textView15"
						android:layout_width="100dip" android:layout_gravity="center_vertical"
						android:text="@string/artemis_remote_text" android:layout_height="wrap_content"
						android:layout_weight="2" android:textSize="@dimen/artemisSettingsFontSize_sw600dp"  android:textColor="@color/artemisSettingsText" />
					<ToggleButton android:layout_width="wrap_content"
						android:text="ToggleButton" android:layout_gravity="right"
						android:layout_marginLeft="20dip" android:enabled="false"
						android:paddingBottom="10dip" android:layout_height="40dip"
						android:id="@+id/artemis_remote_toggle"></ToggleButton>
			</TableRow>
		</TableLayout>
	</ScrollView>
	<RelativeLayout android:layout_marginTop="-50dip"
		android:gravity="center" android:layout_height="wrap_content"
		android:layout_width="fill_parent">
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<Button android:id="@+id/save_artemis_settings"
				android:layout_gravity="center" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/save_artemis_settings" />
			<View android:layout_width="50dip" android:layout_height="wrap_content" />
			<Button android:id="@+id/cancel_artemis_settings"
				android:layout_gravity="center" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/cancel" />
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>