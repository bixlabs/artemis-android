<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:gravity="center"
    android:orientation="vertical" >

	<TextView android:id="@+id/add_custom_camera_title"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="left" android:text="@string/add_custom_camera_title" />

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:orientation="horizontal" >

		<EditText
		    android:id="@+id/custom_camera_active_sensor_name"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:hint="@string/custom_camera_name"
		    android:inputType="textCapWords"
		    android:maxLines="2"
		    android:nextFocusDown="@+id/custom_camera_width"
		    android:textSize="6pt" />

	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >

		<EditText
		    android:id="@+id/custom_camera_width"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight=".3"
		    android:completionHint="@string/custom_camera_width"
		    android:gravity="center"
		    android:hint="@string/custom_camera_chip_width"
		    android:inputType="numberDecimal"
		    android:maxLines="1"
		    android:nextFocusDown="@+id/custom_camera_height"
		    android:textSize="6pt"
		    android:width="100dip" />

		<EditText
		    android:id="@+id/custom_camera_height"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="15dip"
		    android:layout_weight=".3"
		    android:gravity="center"
		    android:hint="@string/custom_camera_chip_height"
		    android:inputType="numberDecimal"
		    android:maxLines="1"
		    android:nextFocusDown="@+id/custom_camera_squeezeratio_as"
		    android:textSize="6pt"
		    android:width="100dip" />

		<EditText
		    android:id="@+id/custom_camera_squeezeratio_as"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="15dip"
		    android:layout_weight=".3"
		    android:gravity="center"
		    android:hint="@string/custom_camera_squeeze_ratio"
		    android:inputType="numberDecimal"
		    android:maxLines="1"
		    android:nextFocusDown="@+id/save_custom_camera"
		    android:textSize="6pt" />

	</LinearLayout>

	<ScrollView
	    android:id="@+id/ScrollView02"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="50dip" >

		<TableLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:gravity="center_horizontal" >

			<TextView
			    android:id="@+id/add_custom_camera_directions"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="10dp"
			    android:text="@string/add_custom_camera_directions_active_chip"
			    android:width="510dip" >

</TextView>
		</TableLayout>
	</ScrollView>

	<RelativeLayout android:layout_marginTop="-50dip"
		android:gravity="center" android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:paddingTop="5dip">

		<Button
		    android:id="@+id/save_custom_camera_active_sensor"
		    android:layout_width="200dp"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="10dp"
		    android:layout_marginTop="15dp"
		    android:text="@string/custom_camera_save_button" />

	</RelativeLayout>

</LinearLayout>